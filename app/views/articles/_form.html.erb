<div class="box">
  <h1><%=name%> artículo<h1> <!-- Name es una variable local para definir la acción -->
  <%= form_for(@article) do |f| %>
    <% @article.errors.full_messages.each do |message| %>
      <div class="errors">
        ! <%=message%>
      </div>
    <%end%>
    <div class="field">
      <%= f.text_field :title, placeholder: "Título", class: "form-control"%>
    </div>

    <div>
      <small>Portada: (750x300px)</small><br>
      <%= f.file_field :cover, class:"SelectConver" %>
    </div>

    <div>
		<small>Categorías</small>
  		<% @categories.each do |category| %>
  			<div class="checkbox">
  				<%= check_box_tag "categories[]", category.id %> <%=category.name %>
  			</div>
  		<% end %>
	  </div>


    <div class="field">
      <!-- Cambioamos el text_field por fedecto por el de cktext_area -->
      <%= f.cktext_area :body, placeholder: "Escribe aquí el artículo", style:"height:100px", class: "form-control"%>
    </div>

    <div class="field">
      <%= f.submit "Guardar", class: "btn be-red white large-padding"%>
    </div>
  <% end %>
</div>
